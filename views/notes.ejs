<section>
  <% if (notes.length > 0) { %>
  <div class="container notes__container">
    <% notes.forEach(function(note) { %>
    <article class="note">
      <div class="note__content">
        <a href="/notes/<%= note._id %>">
          <h3><%= note.title %></h3>
        </a>
        <p><%= note.content %></p>

        <p class="note__footer-date">
          Created at: <%= note.createdAt.toDateString() %>
        </p>
      </div>
    </article>
    <% }); %>
  </div>
  <% } else { %>
  <h2 class="center">Write your first note : )</h2>
  <% } %>
</section>
