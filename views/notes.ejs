<section>
  <% if (notes.length > 0) { %>
  <div class="container notes__container">
    <% notes.forEach(function(note) { %>
    <article class="note">
      <div class="note__content">
        <a href="/notes/<%= note._id %>">
          <h3><%= note.title %></h3>
        </a>
        <p><%= note.content %></p>

        <p class="note__footer-date">
          Created: <%= note.createdAt.toLocaleDateString() %><%
          if(note.updatedAt.toDateString() !== note.createdAt.toDateString()) {
          %>
          <br />Updated: <%= note.updatedAt.toLocaleDateString() %> <% } %>
        </p>
      </div>
    </article>
    <% }); %>
  </div>
  <% } else { %>
  <div class="index__container">
    <h2 class="center">
      There is no note. <br /><br />
      Write your first note : )
    </h2>
    <a href="/create" class="btn primary">Create Note</a>
  </div>
  <% } %>
</section>
